<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;
use App\Models\SkillEvaluation;
use App\Notifications\SkillEvaluated;

class TeacherEvaluationController extends Controller
{
    public function index()
{

    $feedbacks = SkillEvaluation::where('student_id', Auth::id())->latest()->get();

    return view('student.feedback_history', compact('feedbacks'));
}

    public function store(Request $request)
    {
       $data = $request->validate([
        'student_id' => 'required|exists:users,id',
        'speaking' => 'nullable|integer|min:1|max:5',
        'listening' => 'nullable|integer|min:1|max:5',
        'reading' => 'nullable|integer|min:1|max:5',
        'writing' => 'nullable|integer|min:1|max:5',
        'comment' => 'nullable|integer|min:1|max:5',
       ]);

       $data ['reacher_id'] = Auth::id();

       SkillEvaluation::create($data);

       return redirect()->return('feedbacks.index')->with('success','Rating saved');
    }
}



